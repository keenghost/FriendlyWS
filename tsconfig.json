{
  "compilerOptions": {
    "target": "ES2016",
    "module": "ES2020",
    "moduleResolution": "Node",
    "lib": ["ES2020", "DOM"],

    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,

    "noEmit": true,
    "declaration": false
  },
  "include": ["src/**/*", "index.ts"]
}
